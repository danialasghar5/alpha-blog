<!------------------------rendering errors partials------------------------------>
<!-- obj here refering to article as passing argument (obj => article) -->
<%= render "shared/errors", obj: @article%>

<!------------------------Form Area------------------------------------->


<div class ='row'>
	<div class='col-xs-12'>
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<!------------------------Title------------------------------------->
			<!--Title label Area-->
			<div class='form-group'>
				<div class= 'control-label col-sm-2'>
					<%= f.label :title %>
				</div>
			<!--Title Text field Area-->
				<div class='col-sm-8'>
					<%= f.text_field :title, class:"form-control",placeholder:"Enter Title",autofocus: true%>
				</div>
			</div>
<!------------------------description--------------------------------->
			<!--Desc label -->
			<div class='form-group'>
				<div class= 'control-label col-sm-2'>
					<%= f.label :description %>
				</div>

			<!--Desc text Area-->
				<div class='col-sm-8'>
					<%= f.text_area :description,rows:10,class:"form-control",placeholder:"Enter Description",autofocus:true %>
				</div>
			</div>
<!------------------------Submit Button--------------------------------->
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit class: 'btn btn-primary btn-lg' %>	
					</div>
				</div>

		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel Request and return To Articles",articles_path%> ]
		</div>
	</div>
</div>