<!------------------------rendering errors partials------------------------------>
<!-- obj here refering to article as passing argument (obj => user) -->
<%= render "shared/errors", obj: @user %>

<!------------------------Form Area------------------------------------->


<div class ='row'>
	<div class='col-xs-12'>
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<!------------------------Username------------------------------------->
			<!--Title label Area-->
			<div class='form-group'>
				<div class= 'control-label col-sm-2'>
					<%= f.label :username %>
				</div>
			<!--Title Text field Area-->
				<div class='col-sm-8'>
					<%= f.text_field :username, class:"form-control", placeholder:"Enter Username", autofocus: true%>
				</div>
			</div>
<!------------------------Email--------------------------------->
			<!--Email label -->
			<div class='form-group'>
				<div class= 'control-label col-sm-2'>
					<%= f.label :email %>
				</div>

				<!--email field area-->
				<div class='col-sm-8'>
					<%= f.email_field :email,  class:"form-control", placeholder:"Enter Your Email", autofocus:true %>
				</div>
			</div>
<!------------------------Password--------------------------------->
			<!--password label -->
			<div class='form-group'>
				<div class= 'control-label col-sm-2'>
					<%= f.label :password %>
				</div>

				<!--password field area-->
				<div class='col-sm-8'>
					<%= f.password_field :password,  class:"form-control", placeholder:"Enter Your Password", autofocus:true %>
				</div>
			</div>
<!------------------------Submit Button--------------------------------->
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit(@user.new_record? ? 'Sign Up': 'Update Account', class: 'btn btn-primary btn-lg') %>	
					</div>
				</div>

		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel Request and return To Articles",articles_path%> ]
		</div>
	</div>
</div>